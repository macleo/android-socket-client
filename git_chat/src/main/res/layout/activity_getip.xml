<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/layout_serverip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_serverip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server    IP"
            android:layout_centerVertical="true"
            />
    <EditText
        android:layout_toRightOf="@+id/tv_serverip"
        android:id="@+id/et_getip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/input_serverip" 
		android:singleLine="true"
		/>
</RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/layout_serverip"
        android:id="@+id/layout_serverport"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_serverport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server Port"
            />
    <EditText
        android:layout_toRightOf="@+id/tv_serverport"
        android:id="@+id/et_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/input_serverport" 
		android:singleLine="true"
		android:inputType="number"
		/>
</RelativeLayout>
	<LinearLayout
	    android:layout_centerHorizontal="true"
	    android:layout_below="@+id/layout_serverport"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_gravity="center_horizontal"
    	android:gravity="center_horizontal">
    	<Button
        	android:id="@+id/btn_submit"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/s_alertdialog_confirm" />
    	<Button
        	android:id="@+id/btn_cancel"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/s_alertdialog_cancel" />
	</LinearLayout>

</RelativeLayout>